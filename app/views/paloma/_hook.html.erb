<% id = "#{Time.now.to_i}#{(rand * 1000).ceil}" %>

<div class="js-paloma-hook" data-palomaid="<%= id %>">
  <script type="text/javascript">
    (function(){

      if ( !window['Paloma'] ) return true;
      Paloma.env = '<%= Rails.env %>';

      var id = "<%= id %>",
          request = <%= request.to_json.html_safe %>;

      Paloma.engine.setRequest({
        id: id,
        resource: request.resource,
        action: request.action,
        params: request.params
      });

//       For turbolinks 5 - keep hook in each page so browser back and forward buttons still work with Paloma
//       var self  = document.querySelector("[data-palomaid='" + id + "']");
//       if (self) self.parentNode.removeChild(self);

    })();
  </script>
</div>
